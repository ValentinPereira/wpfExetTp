<Window x:Class="WpfExercice3bon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExercice3bon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Name="nameLabel" Margin="347,112,0,0">_Nom:</Label>
        <TextBox Name="nameText" Background="blue" Text="{Binding Nom,Mode=TwoWay}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="314,207,0,0" TextChanged="NameText_TextChanged"/>
        <TextBlock Name="nameTextBlock" Background="Purple" HorizontalAlignment="Left" Width="120" Text="{Binding Nom,Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="314,167,0,0"/>
    </Grid>
</Window>
